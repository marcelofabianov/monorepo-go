# Validation Package Environment Variables

# Enable logging for validation operations
VALIDATION_ENABLE_LOGGING=true

# Sanitize sensitive data in logs (redact passwords, tokens, etc)
VALIDATION_SANITIZE_SENSITIVE_DATA=true

# Additional fields to consider as sensitive (comma-separated)
# VALIDATION_ADDITIONAL_SENSITIVE_FIELDS=api_token,access_key

# Log successful validations (useful for debugging, verbose in production)
VALIDATION_LOG_SUCCESSFUL_VALIDATIONS=false
